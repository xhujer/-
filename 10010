#!name=中国联通去广告
#!desc=彻底屏蔽开屏广告、首页推荐流、活动推广、弹窗广告、商城广告脚本
#!tag=去广告
#!icon=https://imgtolinkx.com/i/zDTlC8gR
#!openUrl=https://apps.apple.com/app/id416457422
#!bundleId=com.chinaUnicom.mobileBusinessHall
#!date=2025-08-29

[Rule]
# --- 开屏广告 ---
^https?:\/\/m\.client\.10010\.com\/uniAdmsInterface\/(getLaunchAd|getWelcomeAd) url reject
^https?:\/\/m\.client\.10010\.com\/mobileService\/onLine\.htm$ url reject

# --- 首页推荐 & 活动广告 ---
^https?:\/\/m\.client\.10010\.com\/mobileService\/(activity|customer)\/(accountListData|get_client_adv|get_startadv) url reject
^https?:\/\/m\.client\.10010\.com\/mobileService\/customer\/getclientconfig\.htm url reject
^https?:\/\/m\.client\.10010\.com\/uniAdmsInterface\/getHomePageAd url reject

# --- 弹窗广告 ---
^https?:\/\/m\.client\.10010\.com\/.*\/popup.* url reject
^https?:\/\/res\.mall\.10010\.cn\/popup\/.* url reject

# --- 商城广告 ---
^https?:\/\/res\.mall\.10010\.cn\/mall\/banner\/.* url reject
^https?:\/\/res\.mall\.10010\.cn\/mall\/activity\/.* url reject
^https?:\/\/res\.mall\.10010\.cn\/mall\/common\/js\/fa\.js url reject

# --- 广告图片 ---
^https?:\/\/m1\.ad\.10010\.com\/noticeMag\/images\/imageUpload\/2\d{3} url reject

# --- 通用广告脚本拦截（排除 apple/10010 域） ---
^https?:\/\/(?!.*(apple|10010)).*\.(com|cn)\/(ads?|adv)(\/|\.js) url reject

[MITM]
hostname = m.client.10010.com, m1.ad.10010.com, res.mall.10010.cn
