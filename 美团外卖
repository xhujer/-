#!name=美团外卖 - 极速去广告
#!desc=极速启动，彻底屏蔽启动页/首页/订单页广告，去除图片/GIF/视频/动画，只保留核心功能
#!bundleId=com.meituan.imeituan
#!icon=https://raw.githubusercontent.com/zirawell/Git/R-Store/Res/Icon/App/meituanwm.png
#!author=zirawell
#!tag=去广告
#!date=2025-08-26

# MITM 主机名，用于 HTTPS 拦截
hostname = wmapi.meituan.com, img.meituan.net, s3plus.meituan.net, flowplus.meituan.net, p*.meituan.net, apimobile.meituan.com

[URL Rewrite]
# -------------------------
# 启动页广告接口极速拒绝
^https?:\/\/wmapi\.meituan\.com\/api\/v\d+\/(loadInfo|openscreen|startpicture) url reject
^https?:\/\/wmapi\.meituan\.com\/api\/v7\/(loadInfo|openscreen|startpicture)\? reject-dict

# 首页/订单页广告接口极速屏蔽
^https?:\/\/p\d\.meituan\.net\/cell url reject
^https?:\/\/apimobile\.meituan\.com\/group\/v1\/recommend\/unity\/recommends reject-dict

# JSON 配置/无关请求直接拒绝，加速首页加载
^https?:\/\/s3plus\.meituan\.net\/ocean-blk-index\/index\/blk_conf_73\.json reject-dict
^https?:\/\/s3plus\.meituan\.net\/v1\/mss_\w+\/(brandcpt-vedio|waimai-alita)\/\w+\.zip$ reject-dict
^http:\/\/59\.82\.113\.10\/amdc\/mobileDispatch\?appkey=213807& reject-dict

# 图片/视频/GIF 广告资源屏蔽，减少流量
^https?:\/\/(s3plus|flowplus)\.meituan\.net\/v\d\/\w+\/linglong\/\w+\.(gif|jpg|mp4) reject-img
^https?:\/\/img\.meituan\.net\/bizad\/bizad_brandCpt_\d+\.jpg reject-img
^https?:\/\/img\.meituan\.net\/goodsawardpic\/[a-f0-9]+\.png\.webp reject-img

[Map Local]
# 替换动画资源为空文件，避免加载广告动画
^https?:\/\/s3plus\.meituan\.net\/v\d\/mss_\w+\/goku\/(lottie|lucency) file:///dev/null
