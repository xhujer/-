#!name=HDHive 自动签到
#!desc=自动抓取Cookie并每日签到
#!author=ming
#!icon=https://hdhive.com/favicon.ico
#!homepage=https://hdhive.com/

[Argument]
RunTime = input,"0 6 * * *",tag=每日签到时间
CaptureCookie = switch,true,tag=自动获取Cookie

[Script]
cron {RunTime} script-path=https://raw.githubusercontent.com/xhujer/-/refs/heads/main/HDHive%20Script, tag=HDHive签到, timeout=60, script-update-interval=86400

http-request ^https?:\/\/(?:www\.)?hdhive\.com\/(?!api\/customer\/user\/checkin)(?:$|user\b|dashboard\b|go-api\b|api\b) script-path=https://raw.githubusercontent.com/xhujer/-/refs/heads/main/HDHive%20Script, tag=HDHive抓Cookie, timeout=10, requires-body=false, enable={CaptureCookie}, script-update-interval=86400

[Mitm]
hostname = hdhive.com