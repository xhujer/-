/**
 * HDHive è‡ªåŠ¨ç­¾åˆ° (v10.1 åŸŸåä¿®æ­£ç‰ˆ)
 * é€»è¾‘ï¼šä¿ç•™ Python ç‰ˆçš„ Token æå–ç®—æ³•ï¼Œä½†å¼ºåˆ¶ä½¿ç”¨ hdhive.com
 * ä¿®å¤ï¼šè§£å†³ v10.0 è¿žæŽ¥ hdhive.online å¯¼è‡´çš„ç½‘ç»œé”™è¯¯
 */

const $ = new Env("HDHive");

// å­˜å‚¨ Key
const KEY_COOKIE = 'hdhive_cookie_v10'; 
const KEY_REFERER = 'hdhive_referer_v10'; 
const KEY_UA = 'hdhive_ua_v10'; 

// é…ç½®
const CFG = {
    // å¼ºåˆ¶ä½¿ç”¨ä½ ä¹‹å‰æˆåŠŸçš„åŸŸå
    domain: 'hdhive.com',
};

(async () => {
    if (typeof $request !== "undefined") {
        await capture();
    } else {
        await checkIn();
    }
})().catch((e) => $.logErr(e)).finally(() => $.done());

// ------------------------------------------
// 1. æŠ“å–é€»è¾‘
// ------------------------------------------
async function capture() {
    if ($request.url.indexOf("user/checkin") > -1) return;

    const h = $request.headers;
    const cookie = getHeader(h, 'Cookie');
    const referer = getHeader(h, 'Referer');
    const ua = getHeader(h, 'User-Agent');

    // åªè¦æœ‰ Cookie ä¸”åŒ…å« token å­—æ®µå°±æŠ“å–
    if (cookie && cookie.indexOf("token=") > -1) {
        if (cookie.length < 20) return;

        const oldCookie = $.getdata(KEY_COOKIE);

        if (cookie !== oldCookie) {
            $.setdata(cookie, KEY_COOKIE);
            if (referer) $.setdata(referer, KEY_REFERER);
            if (ua) $.setdata(ua, KEY_UA);
            
            console.log(`[HDHive] æ•èŽ·æˆåŠŸ`);
            $.msg("HDHive", "ðŸŽ‰ æŠ“å–æˆåŠŸ", "å‡­è¯å·²æ›´æ–°ï¼ŒåŸŸåé”å®š hdhive.com");
        }
    }
}

// ------------------------------------------
// 2. ç­¾åˆ°é€»è¾‘
// ------------------------------------------
async function checkIn() {
    const rawCookie = $.getdata(KEY_COOKIE);
    const referer = $.getdata(KEY_REFERER) || `https://${CFG.domain}/`;
    const ua = $.getdata(KEY_UA) || "Mozilla/5.0 (iPhone; CPU iPhone OS 16_0 like Mac OS X) AppleWebKit/605.1.15 (KHTML, like Gecko) Version/16.0 Mobile/15E148 Safari/604.1";

    if (!rawCookie) {
        $.msg("HDHive", "âŒ æ— æ³•ç­¾åˆ°", `æ— å‡­è¯ï¼Œè¯·è®¿é—® ${CFG.domain} æŠ“å–`);
        return;
    }

    // ä»Ž Cookie è§£æž Token (Python æ’ä»¶çš„æ ¸å¿ƒé€»è¾‘)
    const cookieObj = parseCookie(rawCookie);
    const token = cookieObj['token'];
    const csrfToken = cookieObj['csrf_access_token'];

    if (!token) {
        $.msg("HDHive", "âŒ å‡­è¯ä¸å®Œæ•´", "Cookie ç¼ºå°‘ tokenï¼Œè¯·é‡æ–°ç™»å½•");
        return;
    }

    // æž„é€ è¯·æ±‚
    const apiUrl = `https://${CFG.domain}/api/customer/user/checkin`;
    const origin = `https://${CFG.domain}`;

    const headers = {
        'User-Agent': ua,
        'Accept': 'application/json, text/plain, */*',
        'Origin': origin,
        'Referer': referer,
        'Authorization': `Bearer ${token}`, // æ‰‹åŠ¨æž„é€  Bearer
        'Cookie': rawCookie
    };

    if (csrfToken) {
        headers['x-csrf-token'] = csrfToken;
    }

    const req = {
        url: apiUrl,
        method: "POST",
        headers: headers,
        body: "" 
    };

    return new Promise(resolve => {
        $.post(req, (err, resp, data) => {
            // æ‰“å°è¯¦ç»†é”™è¯¯æ—¥å¿—
            if (err) {
                console.log(`[HDHive] ç½‘ç»œé”™è¯¯è¯¦æƒ…: ${JSON.stringify(err)}`);
                $.msg("HDHive", "âŒ ç½‘ç»œé”™è¯¯", "æ— æ³•è¿žæŽ¥åˆ° hdhive.com");
                resolve();
                return;
            }

            let resJson = {};
            try { resJson = JSON.parse(data); } catch (e) {}
            
            console.log(`[HDHive] çŠ¶æ€ç : ${resp.status}`);

            if (resp.status === 200 || resp.status === 201) {
                const msg = resJson.message || "ç­¾åˆ°æˆåŠŸ";
                $.msg("HDHive", "âœ… ç­¾åˆ°æˆåŠŸ", msg);
            } 
            else if (resp.status === 400) {
                const msg = resJson.message || "è¯·æ±‚è¢«æ‹’ç»";
                // 400 ä¹Ÿæ˜¯è¿žæŽ¥æˆåŠŸçš„æ ‡å¿—
                if (msg.includes("å·²ç­¾åˆ°") || msg.includes("ç­¾åˆ°è¿‡") || msg.includes("checked in")) {
                    $.msg("HDHive", "ðŸŸ¢ ä»Šæ—¥å·²ç­¾åˆ°", msg);
                } else {
                    $.msg("HDHive", "âš ï¸ ç­¾åˆ°ç»“æžœ(400)", msg);
                }
            } 
            else if (resp.status === 401 || resp.status === 403) {
                 $.msg("HDHive", "âš ï¸ å‡­è¯å¤±æ•ˆ", "è¯·é‡æ–°ç™»å½•ç½‘é¡µæŠ“å–");
            }
            else {
                $.msg("HDHive", "âŒ ç­¾åˆ°å¤±è´¥", `çŠ¶æ€ç  ${resp.status}`);
            }
            resolve();
        });
    });
}

// ------------------------------------------
// å·¥å…·å‡½æ•°
// ------------------------------------------
function parseCookie(str) {
    const list = {};
    if (!str) return list;
    str.split(';').forEach(i => {
        const parts = i.split('=');
        if (parts.length >= 2) {
            list[parts[0].trim()] = parts.slice(1).join('=').trim();
        }
    });
    return list;
}

function getHeader(headers, key) {
    if (!headers) return null;
    const lowerKey = key.toLowerCase();
    for (const k in headers) {
        if (k.toLowerCase() === lowerKey) return headers[k];
    }
    return null;
}

function Env(name) {
    return {
        name: name,
        getdata: (k) => typeof $persistentStore !== "undefined" ? $persistentStore.read(k) : null,
        setdata: (v, k) => typeof $persistentStore !== "undefined" ? $persistentStore.write(v, k) : null,
        msg: (t, s, b) => {
            if (typeof $notification !== "undefined") $notification.post(t, s, b);
            console.log(`===${t}===\n${s}\n${b}`);
        },
        post: (o, c) => typeof $httpClient !== "undefined" ? $httpClient.post(o, c) : null,
        logErr: (e) => console.log(`â—ï¸${name} Error: ${e}`),
        done: () => typeof $done !== "undefined" ? $done({}) : null
    };
}
