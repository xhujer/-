#!name=HDHive 自动签到
#!desc=v14.0 全能通知版：签到成功后显示 ID、等级、分享数、积分、累计签到及加入时间。
#!author=ming
#!icon=https://hdhive.com/favicon.ico
#!homepage=https://hdhive.com/

[Argument]
RunTime = input,"0 6 * * *",tag=每日签到时间,desc=Cron表达式
CaptureCookie = switch,true,tag=[开关] 自动获取Cookie,desc=开启后访问网页自动抓取

[Script]
cron {RunTime} script-path=https://raw.githubusercontent.com/xhujer/-/refs/heads/main/HDHive%20Script, tag=HDHive每日签到, timeout=60, script-update-interval=86400

http-request ^https?:\/\/hdhive\.com\/(?:$|user|api|dashboard) script-path=https://raw.githubusercontent.com/xhujer/-/refs/heads/main/HDHive%20Script, tag=HDHive获取Cookie, timeout=10, requires-body=false, enable={CaptureCookie}, script-update-interval=86400

[Mitm]
hostname = hdhive.com
