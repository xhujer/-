[Script]
# ① 手动访问 linux.do 时触发：抓 Cookie
http-request ^https:\/\/linux\.do\/.* script-path=https://raw.githubusercontent.com/xhujer/-/refs/heads/main/3, tag=LinuxDo-抓Cookie, enabled=true

# ② 定时触发：自动刷新 Cookie + 拉 connect 信息（每6小时）
cron "0 */6 * * *" script-path=https://raw.githubusercontent.com/xhujer/-/refs/heads/main/3, tag=LinuxDo-自动刷新&任务, enabled=true

[MITM]
hostname = %APPEND% linux.do, connect.linux.do