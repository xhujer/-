#!name=Linux Do 签到
#!desc=自动抓取Cookie并每日签到/查询Connect数据
#!author=xhujer
#!homepage=https://github.com/xhujer/-/blob/main/LinuxDo.js
#!icon=https://linux.do/uploads/default/original/3X/9/d/9dd49731091ce8656e94433a26a3ef36062b3994.png
#!date=2024-03-21

[Script]
# 获取 Cookie (访问网页触发)
http-request ^https:\/\/linux\.do\/$ script-path=https://raw.githubusercontent.com/xhujer/-/refs/heads/main/LinuxDo.js, requires-body=false, tag=LinuxDo获取Cookie, timeout=10

# 定时任务 (每天早上9点执行)
cron "0 9 * * *" script-path=https://raw.githubusercontent.com/xhujer/-/refs/heads/main/LinuxDo.js, tag=LinuxDo每日签到, timeout=60

[MitM]
hostname = linux.do
