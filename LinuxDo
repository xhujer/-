#!name=Linux.Do 助手
#!desc=每日自动签到并查询 Connect 数据。
#!author=Gemini
#!icon=https://linux.do/uploads/default/original/3X/9/d/9dd49731091ce8656e94433a26a3ef36062b3994.png

[Argument]
Notify_Enable = switch, true, false, tag=开启通知, desc=任务完成后是否推送通知

[Script]
http-request ^https:\/\/(www\.)?linux\.do\/?$ script-path=LinuxDo_v2.js, requires-body=false, tag=LinuxDo Cookie, argument=Notify_Enable
cron "0 9 * * *" script-path=LinuxDo_v2.js, tag=LinuxDo Checkin, timeout=60, argument=Notify_Enable

[MitM]
hostname = *.linux.do
