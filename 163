/**
 * @name 网易邮箱大师图标解锁
 * @desc 针对 detail3 接口重写会员状态
 */

let obj = JSON.parse($response.body);

if (obj.result) {
    // 核心权限修改
    obj.result.mbrType = 1;               // 设为 1 通常代表大师会员
    obj.result.isMember = true;           // 解锁会员身份
    obj.result.hasMasterPrvlg = true;     // 解锁大师特权
    
    // 延长有效期至 2030 年 (时间戳毫秒)
    obj.result.endTime = 1924905599000; 
    
    // 如果 result 下还有 master/plus 嵌套层级，一并处理
    if (obj.result.master) {
        obj.result.master.isMember = true;
        obj.result.master.hasMasterPrvlg = true;
        obj.result.master.mbrType = 1;
    }
}

$done({ body: JSON.stringify(obj) });
